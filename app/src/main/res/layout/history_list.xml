<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/entriPas"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        card_view:cardElevation="5sp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/button"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:textSize="10sp"
                android:background="@color/darkgray" >
                <TextView
                    android:id="@+id/textPos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="POSITION"
                    android:textSize="11sp"
                    android:textColor="@color/white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/coinName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="CoinName / USDT"
                android:textSize="20sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/garis"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="5dp"
                android:background="@android:color/black" />

            <TextView
                android:id="@+id/entryPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/garis"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Entry Pass : {}"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/stopLoss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/entryPrice"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:text="Stop Loss : {}"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/takeProfit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/garis"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_alignStart="@+id/riskAmount"
                android:text="Take Profit : {}"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/riskAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/takeProfit"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="10dp"
                android:layout_toStartOf="@+id/buttonDetail"
                android:text="Risk Amount : {}"
                android:textSize="10sp" />


            <TextView
                android:id="@+id/dateSubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/buttonDetail"
                android:layout_alignStart="@+id/buttonDetail"
                android:layout_alignEnd="@+id/buttonDetail"
                android:text="Date Submit"
                android:textAlignment="center"
                android:textSize="10sp" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDetail"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_below="@+id/button"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/biru"
                android:textSize="10sp"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="DETAIL" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>